    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220"/>
            <RowDefinition Height="240*"/>
        </Grid.RowDefinitions>
        <TextBox
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Opacity="0"
            Name="txtFocus"/>
        <Grid
            Grid.Row="0">
            <TextBlock
                Visibility="Collapsed"
                Margin="210 40 0 0"
                Foreground="#0F9D58"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="+10xp"
                FontSize="40"/>
            <Border
                Background="#DB4437"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Padding="20 10 20 10"
                Margin="20"
                CornerRadius="5"
                Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <TextBlock
                    Foreground="White"
                    FontWeight="Bold"
                    Text="Выход"
                    FontSize="32"/>
            </Border>
            <Border
