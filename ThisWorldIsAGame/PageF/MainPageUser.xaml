                VerticalAlignment="Center"
                Padding="40 10 40 10"
                Margin="20"
                CornerRadius="5"
                BorderBrush="#0F9D58"
                BorderThickness="3">
                <StackPanel
                    >
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Name="TbUserLevel"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Foreground="#4285F4"
                            FontSize="70"
                            Text="20"/>
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Foreground="#4285F4"
                            FontSize="25"
                            Margin="5 5 5 10"
                            Text="lvl"/>
                        
                    </StackPanel>
                    <Border
                        CornerRadius="3"
                        BorderThickness="4"
                        BorderBrush="#4285F4">
                        <StackPanel
                            Orientation="Horizontal">
                            <ProgressBar
                                Name="PrBarUserLevel"
                                Background="White"
                                Foreground="#0F9D58"
                                Value="50"
                                Minimum="0"
                                Maximum="100"
                                Height="30"
                                Width="250"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            <Border
                Margin="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Padding="10"
                CornerRadius="5"
                BorderBrush="#0F9D58"
                BorderThickness="3">
                <StackPanel>
                    <TextBlock
                        Name="TbUserLogin"
                        FontWeight="Bold"
                        Foreground="#4285F4"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="10 10 10 0"
                        FontSize="36"
                        Text="UserName"/>
                    <TextBlock
                        Name="TbStatus"
                        Foreground="#4285F4"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="10 0 10 0"
                        FontSize="26"
